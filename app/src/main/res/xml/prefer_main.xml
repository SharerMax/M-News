<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/action">
        <CheckBoxPreference
            android:key="auto_refresh"
            android:title="@string/auto_refresh_title"
            android:summary="@string/auto_refresh_summary"
            android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/view">
        <SwitchPreference
            android:key="use_card_view"
            android:title="@string/use_card_view_title"
            android:defaultValue="true"/>
        <SwitchPreference
            android:key="swipe_to_back"
            android:title="@string/swipe_back_title"
            android:defaultValue="true"/>
        <SwitchPreference
            android:key="disable_animation"
            android:title="@string/item_disable_animation"
            android:summary="@string/item_disable_animation_desc"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/about_title">
        <Preference
            android:key="weibo"
            android:title="@string/author_Weibo_title"
            android:summary="@string/author_Weibo_summary"/>
        <Preference
            android:key="twitter"
            android:title="@string/author_Twitter_title"
            android:summary="@string/author_Twitter_summary"/>
        <Preference
            android:key="github"
            android:title="@string/github_title"
            android:summary="@string/github_url"/>
        <Preference
            android:key="license"
            android:title="@string/open_source_license"/>
        <Preference
            android:key="version"
            android:title="@string/app_version"/>
    </PreferenceCategory>
</PreferenceScreen>
