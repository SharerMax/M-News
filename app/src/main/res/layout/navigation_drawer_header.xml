<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_image_height">
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/drawer_coverimage"
        android:layout_width="@dimen/drawer_image_width"
        android:layout_height="@dimen/drawer_image_height"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/nav_profile_image_size"
            android:layout_height="@dimen/nav_profile_image_size"
            android:layout_gravity="center_vertical"
            android:layout_above="@+id/profile_idstr"
            android:layout_marginBottom="@dimen/item_pacing"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:src="@drawable/ic_action_account_circle_write"/>
        <TextView
            android:id="@+id/profile_idstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/drawer_profile_id_anonymous"
            android:textSize="@dimen/nav_profile_text_size"
            android:typeface="sans"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/list_margin_left"
            android:layout_marginBottom="@dimen/item_pacing"
            tools:text="@string/author_Weibo_summary"/>

    </RelativeLayout>
</FrameLayout>
