<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/list_margin_left"
    android:paddingRight="@dimen/list_margin_right"
    android:layout_marginTop="@dimen/list_margin_top"
    android:layout_marginBottom="@dimen/list_margin_bottom"
    android:minHeight="@dimen/tab_height"
    tools:background="?attr/colorPrimary">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:src="@drawable/ic_home_white"/>
    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_margin_left"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/nav_item_text_seize"
        android:gravity="center_vertical"
        tools:text="@string/drawer_home_action"/>

</LinearLayout>